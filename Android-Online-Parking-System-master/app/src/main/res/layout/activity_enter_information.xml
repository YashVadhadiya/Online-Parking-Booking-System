<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.sampleregistration.EnterInformation"
    android:background="@drawable/qaz">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" NAME:"
        android:id="@+id/L1"
        android:textSize="23dp"
        android:layout_alignBottom="@+id/E1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/E1"
        android:layout_marginTop="99dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/E2"
        android:hint="Enter Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EMAIL ID:"
        android:id="@+id/L2"
        android:layout_below="@+id/E1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textSize="23dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/E2"
        android:layout_alignTop="@+id/L2"
        android:layout_alignParentEnd="true"
        android:hint="Enter Email-Id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PHONE NO:"
        android:id="@+id/L3"
        android:layout_below="@+id/E2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textSize="23dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/E3"
        android:layout_alignTop="@+id/L3"
        android:layout_alignParentEnd="true"
        android:hint="Enter Contact" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Reg Details"
        android:id="@+id/B1"
        android:onClick="B1Click"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="       Enter Details"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/L1"
        android:layout_alignParentStart="true"
        android:textSize="40dp" />

</RelativeLayout>
